import toga
from toga.style import Pack
from toga.style.pack import COLUMN, ROW
from PIL import Image

# 중앙값: padding(0,0,0,285)
class HelloWorld(toga.App):
    def startup(self):
        f=open("datasample.txt",'r',encoding='UTF-8')
        my_lst=list()
        while 1:
            line=f.readline()
            if not line:
                break;
            else:
                name=line.split(' ')
                my_lst.append(name[0])

        main_box = toga.Box(style=Pack(direction=COLUMN))

        pag_name = toga.Label("헬스장 약도 ", style=Pack(padding=(0, 0, 0, 285)))
        pag_label = toga.Label("운동 유형을 선택해 주세요.", style=Pack(padding=(100, 5, 5, 5)))
        button_box = toga.Box(style=Pack(direction=COLUMN))
        aerobic_button = toga.Button(
            "유산소 운동", on_press=self.aerobic_press, style=Pack(padding=(5))
        )
        weight_button = toga.Button(
            "근력 운동", on_press=self.weight_press, style=Pack(padding=(5))
        )
        
       

        mus_view=toga.ImageView(id="view",image="mustle.jpg")
        mus_view.style=Pack(padding=(0,0,100,0))
        

        button_box.add(aerobic_button)
        button_box.add(weight_button)

        main_box.add(pag_name)
        main_box.add(pag_label)
        main_box.add(button_box)
        main_box.add(mus_view)
        

        self.main_window = toga.MainWindow(title=self.formal_name)
        self.main_window.content = main_box
        self.main_window.show()

    def weight_press(self, widget):
        
        pass
    def aerobic_press(self, widget):
        pass        
    def run1(self,widget):
        #1번누르면 실행될 함수
        pass

        


def main():
    return HelloWorld()
